<%- include("header") -%>
<div class="container">
  <div class="box" id="heading">
     <h1><%= listTitle %></h1>
  </div>

  <%- include("form") -%>
<hr />
  <div class="box">
    <table class="table my-5">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Description</th>
          <th scope="col">Amount</th>
          <th scope="col">Due date</th>
          <th scope="col">Paid</th>
          <th scope="col">Payment method</th>
          <th scope="col">Payment date</th>
          <th scope="col">Payment reason</th>
          <th>    </th>
        </tr>
      </thead>
      <tbody>
        <% for (let i=0; i<feeList.length; i++){%>
        <tr id="tr_<%= i %>" class="fee">
          <td>
            <%= feeList[i].feeId %>
          </td>
          <td>
            <%= feeList[i].feeDescription %>
          </td>
          <td class="text-right">
            <%= feeList[i].feeAmount %>â‚¬
          </td>
          <td  class="text-right">
            <%= feeList[i].feeDueDate.toLocaleDateString('en-GB') %>
          </td>
          <td>
            <% if (feeList[i].feePaid === "on") {%>
            <input type="checkbox" name="" value="true" checked>
            <style>#tr_<%=i%>{background: springgreen;}</style>
            <% } else { %>
            <input type="checkbox" name="" value="false">
            <% } %>
          </td>
          <td>
            <%= feeList[i].feePaymentMethod %>
          </td>
          <td  class="text-right">
            <%= feeList[i].feePaymentDate.toLocaleDateString('en-GB') %>
          </td>
          <td>
            <%= feeList[i].feePaymentReason %>
          </td>
          <td>
            <form>
              <button class="delete-btn" type="submit" name="button">
                <span class="material-symbols-outlined">
delete
</span>
</button>
            </form>
          </td>
        </tr>
        <%}%>
      </tbody>
    </table>


  </div>
</div><!-- / container-->

<%- include("footer") -%>
